<Page x:Class="WarehouseApp.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Inventory">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Gombok -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Button Content="Betárolás" Click="StoreIn_Click" Height="40" Width="150" Margin="10"/>
            <Button Content="Kitárolás" Click="StoreOut_Click" Height="40" Width="150" Margin="10"/>
            <Button Content="Mozgatás" Click="Transfer_Click" Height="40" Width="150" Margin="10"/>
            <Button Content="Mozgatási előzmények" Click="TransferHistory_click" Height="40" Width="150" Margin="10" Background="LightCoral"/>
        </StackPanel>

        <!-- Szűrő -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10" Grid.Row="1">
            <Label Content="Material Id:"/>
            <TextBox x:Name="txtFilterMaterial" Width="150" Margin="0,0,10,0"/>
            <Label Content="Location Id:"/>
            <TextBox x:Name="txtFilterLocation" Width="150" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Lista -->
        <ListView x:Name="InventoryList" Grid.Row="2" Margin="10" ItemsSource="{Binding Inventories}" SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Material Id" DisplayMemberBinding="{Binding MaterialId}"/>
                    <GridViewColumn Header="Anyagszám" DisplayMemberBinding="{Binding MaterialNumber}"/>
                    <GridViewColumn Header="Anyag Leírása" DisplayMemberBinding="{Binding MaterialDescription}"/>
                    <GridViewColumn Header="Location ID" DisplayMemberBinding="{Binding LocationId}"/>
                    <GridViewColumn Header="Tárhely" DisplayMemberBinding="{Binding LocationName}"/>
                    <GridViewColumn Header="Mennyiség" DisplayMemberBinding="{Binding Quantity}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
