<Page x:Class="WarehouseApp.TransactionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Transactions">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Gomb -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Button Content="Mozgatások blokkolása" Click="BlockTransactions_Click" Height="40" Width="200" Margin="10"/>
        </StackPanel>
        <Button Content="↩" FontSize="20" Click="Back_Click" Height="40" HorizontalAlignment="Right" Padding="10 0 10 0" Margin="10" Background="LightCoral"/>

        <!-- Lista -->
        <ListView x:Name="TransactionsList" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding TransactionId}"/>
                    <GridViewColumn Header="Anyagszám" DisplayMemberBinding="{Binding MaterialNumber}"/>
                    <GridViewColumn Header="Leírás" DisplayMemberBinding="{Binding MaterialDescription}"/>
                    <GridViewColumn Header="Honnan" DisplayMemberBinding="{Binding TransferFrom}"/>
                    <GridViewColumn Header="Hova" DisplayMemberBinding="{Binding TransferTo}"/>
                    <GridViewColumn Header="Mennyiség" DisplayMemberBinding="{Binding TransferedQuantity}" />
                    <GridViewColumn Header="Felhasználó" DisplayMemberBinding="{Binding TransferBy}"/>
                    <GridViewColumn Header="Dátum" DisplayMemberBinding="{Binding TransferDate}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
