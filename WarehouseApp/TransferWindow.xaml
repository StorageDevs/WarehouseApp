<Window x:Class="WarehouseApp.Windows.Popups.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Mozgatás" Height="360" Width="420" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>

            <!-- Anyag -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Anyag:" Width="100"/>
                <ComboBox x:Name="cmbMaterials" Width="200" DisplayMemberPath="MaterialDescription"
                          SelectionChanged="MaterialComboBox_SelectionChanged"/>
                <Button Content="ℹ" Width="30" Margin="10,0,0,0" Click="MaterialInfo_Click"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Honnan -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Honnan:" Width="100"/>
                <ComboBox x:Name="cmbFromLocations" Width="200" DisplayMemberPath="LocationName"
                          SelectionChanged="FromLocationComboBox_SelectionChanged"/>
                <Button Content="ℹ" Width="30" Margin="10,0,0,0" Click="FromLocationInfo_Click"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Hova -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Hova:" Width="100"/>
                <ComboBox x:Name="cmbToLocations" Width="200" DisplayMemberPath="LocationName"
                          SelectionChanged="ToLocationComboBox_SelectionChanged"/>
                <Button Content="ℹ" Width="30" Margin="10,0,0,0" Click="ToLocationInfo_Click"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Mennyiség -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Mennyiség:" Width="100"/>
                <xctk:IntegerUpDown x:Name="numQuantity" Width="100" Minimum="0" Maximum="0" Value="0"/>
                <TextBlock x:Name="txtMaxQuantityLabel" Margin="10,4,0,0" VerticalAlignment="Center" FontSize="12" Foreground="Gray" Padding="0 0 0 0"/>
            </StackPanel>

            <!-- Felhasználó -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Felhasználó:" Width="100"/>
                <ComboBox x:Name="cmbUsers" Width="200" DisplayMemberPath="Username"/>
            </StackPanel>

            <!-- Gombok -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Mozgatás" Width="120" Height="30" Margin="10" Click="Submit_Click"/>
                <Button Content="Mégse" Width="120" Height="30" Margin="10" Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
