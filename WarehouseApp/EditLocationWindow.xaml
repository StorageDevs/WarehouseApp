<Window x:Class="WarehouseApp.EditLocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lokáció módosítása" Height="383.387" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <!-- Név -->
            <TextBlock Text="Név (jelenlegi):" FontWeight="Bold" TextDecorations="Underline" Padding="0 0 0 0"/>
            <TextBlock x:Name="lblNameCurrent" Margin="0 0 0 5" Padding="0 0 0 0"/>
            <TextBlock Text="Új név:" Padding="0 0 0 0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtNameNew" Width="250" Margin="0 0 10 0"/>
                <CheckBox x:Name="chkNameKeep" Content="Marad" VerticalAlignment="Center" Padding="0 0 0 0"/>
            </StackPanel>

            <!-- Leírás -->
            <TextBlock Text="Leírás (jelenlegi):" FontWeight="Bold" TextDecorations="Underline" Padding="0 0 0 0" Margin="0 10 0 0"/>
            <TextBlock x:Name="lblDescriptionCurrent" Margin="0 0 0 5" Padding="0 0 0 0"/>
            <TextBlock Text="Új leírás:" Padding="0 0 0 0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtDescriptionNew" Width="250" Margin="0 0 10 0"/>
                <CheckBox x:Name="chkDescriptionKeep" Content="Marad" VerticalAlignment="Center" Padding="0 0 0 0"/>
            </StackPanel>

            <!-- Kapacitás -->
            <TextBlock Text="Kapacitás (jelenlegi):" FontWeight="Bold" TextDecorations="Underline" Padding="0 0 0 0" Margin="0 10 0 0"/>
            <TextBlock x:Name="lblCapacityCurrent" Margin="0 0 0 5" Padding="0 0 0 0"/>
            <TextBlock Text="Új kapacitás:" Padding="0 0 0 0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtCapacityNew" Width="250" Margin="0 0 10 0"/>
                <CheckBox x:Name="chkCapacityKeep" Content="Marad" VerticalAlignment="Center" Padding="0 0 0 0"/>
            </StackPanel>

            <!-- Gombok -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Content="Módosítás" Width="100" Margin="10" Click="ConfirmEdit_Click"/>
                <Button Content="Mégse" Width="100" Margin="10" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
