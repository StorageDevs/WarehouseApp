<Window x:Class="WarehouseApp.Windows.Popups.AddLocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új Tárhely hozzáadása" Height="218.9" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Név:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" Padding="0 0 0 0"/>
        <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="5" Padding="0 0 0 0"/>

        <TextBlock Text="Leírás:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" Padding="0 0 0 0"/>
        <TextBox x:Name="txtDescription" Grid.Row="1" Grid.Column="1" Margin="5" Padding="0 0 0 0"/>

        <TextBlock Text="Kapacitás:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center" Padding="0 0 0 0"/>
        <TextBox x:Name="txtCapacity" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <Button Content="Hozzáadás" Grid.Row="3" Grid.ColumnSpan="2" Height="35" Margin="10" Click="Add_Click"/>
    </Grid>
</Window>
